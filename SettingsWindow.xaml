<Window x:Class="DesktopFolder.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Параметры" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15">
        <TextBlock Text="Кол-во иконок в строке (развернутый вид):"/>
        <TextBox x:Name="IconsPerRowTextBox" Margin="0,5,0,10" PreviewTextInput="NumberValidationTextBox"/>

        <CheckBox x:Name="ShowCollapsedNameCheckBox" Content="Показывать имя папки в свернутом состоянии"/>

        <CheckBox x:Name="ShowExpandedNameCheckBox" Margin="0,10,0,0"
                  Content="Показывать имя папки в развернутом состоянии"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Width="100" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="100" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>